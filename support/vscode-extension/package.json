{
  "name": "sif-language",
  "displayName": "Sif Language Support",
  "description": "Language support for Sif programming language",
  "version": "0.1.0",
  "publisher": "sif",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sif",
        "aliases": [
          "Sif",
          "sif"
        ],
        "extensions": [
          ".sif"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "sif.runFile",
        "title": "Run Sif File"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Sif",
      "properties": {
        "sif.languageServer.path": {
          "type": "string",
          "default": "",
          "description": "Path to the sif_lsp language server executable"
        },
        "sif.interpreter.path": {
          "type": "string",
          "default": "",
          "description": "Path to the sif_tool interpreter executable"
        }
      }
    },
    "configurationDefaults": {
      "editor.semanticHighlighting.enabled": true,
      "[sif]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "semanticTokenScopes": [
      {
        "language": "sif",
        "scopes": {
          "keyword": [
            "keyword.control.sif"
          ],
          "function": [
            "entity.name.function.sif"
          ],
          "string": [
            "string.quoted.double.sif"
          ],
          "number": [
            "constant.numeric.sif"
          ],
          "comment": [
            "comment.line.sif"
          ],
          "operator": [
            "keyword.operator.sif"
          ],
          "variable": [
            "variable.other.sif"
          ]
        }
      }
    ]
  },
  "activationEvents": [
    "onLanguage:sif"
  ],
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.32.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "publish": "vsce publish"
  }
}
