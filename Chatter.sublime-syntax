%YAML 1.2
---
# See http://www.sublimetext.com/docs/3/syntax.html
file_extensions:
  - talk
  - chatter
scope: source.chatter
contexts:
  main:
    - match: '"'
      scope: punctuation.definition.string.begin.chatter
      push: double_quoted_string

    - match: '--'
      scope: punctuation.definition.comment.chatter
      push: line_comment

    - match: '#'
      scope: punctuation.definition.comment.chatter
      push: line_comment

    - match: '\\'
      scope: punctuation.definition.comment.chatter
      push: line_comment

    - match: 'Â¬'
      scope: punctuation.definition.comment.chatter
      push: line_comment

    - match: '\b(if|else|then|repeat|end|on|function|pass|exit|return|do|next|put|get|it|global|is|a|an|in|there|not)\b'
      scope: keyword.control.c
      
    - match: '\b(before|into|after|the|of|to)\b'
      scope: keyword.control.c

    - match: '\b(true|false|empty|tab|space|zero|one|two|three|four|five|six|seven|eight|nine|ten|quote|pi)\b'
      scope: constant.numeric.c

    - match: '\b(-)?[0-9.]+\b'
      scope: constant.numeric.c

  double_quoted_string:
    - meta_scope: string.quoted.double.chatter
    - match: '\\.'
      scope: constant.character.escape.chatter
    - match: '"'
      scope: punctuation.definition.string.end.chatter
      pop: true

  line_comment:
    - meta_scope: comment.line.chatter
    - match: $
      pop: true
