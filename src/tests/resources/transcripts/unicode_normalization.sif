-- Test 1: NFC normalization - composed vs decomposed characters
-- Both should normalize to the same identifier

-- Set using composed form (U+00E9)
set café to 42
print café

(-- expect
42
--)

-- Overwrite using decomposed form (e + U+0301)
set café to 100

-- Access using composed form - should get new value
print café

(-- expect
100
--)

