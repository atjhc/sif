-- Global scope
set foo to "outer"
function A
  set foo to "inner"
  print foo
end function
A
(-- expect
inner
--)

print foo
(-- expect
inner
--)

-- Local scope
function A
  set bar to "local"
  if true then
    print bar
    set bar to "local2"
  end if
  print bar
end function
A
(-- expect
local
local2
--)

-- Block scope
function A
  if true then
    set local to 1
  end if
  print local
end function
A
(-- expect
1
--)

-- Local functions
function A
  print "outer"
end function

function B
  function A
    print "inner"
  end function
  A
end function

B
(-- expect
inner
--)

A
(-- expect
inner
