repeat
    print "loop 1"
    exit repeat
end
(-- expect
loop 1
--)

set i to 0
repeat while i < 2
    print "loop 2"
    set i to i + 1
end
(-- expect
loop 2
loop 2
--)

set i to 0
repeat until i is 3
    print "loop 3"
    set i to i + 1
end
(-- expect
loop 3
loop 3
loop 3
--)

repeat
    repeat
        exit repeat
    end
    print "loop 4"
    exit repeat
end
(-- expect
loop 4
--)

set i to 0
repeat while i < 4
    if i = 2 then
        set i to i + 1
        next repeat
    end if
    print "loop 5"
    set i to i + 1
end
(-- expect
loop 5
loop 5
loop 5
--)

repeat for i in 1...5
    if i % 2 is 0 then next repeat
    print i
end repeat
(-- expect
1
3
5
--)

repeat for i in {1, empty, 3}
    print i
end repeat
